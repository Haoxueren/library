<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DigitEditText">
        <attr name="maxInteger" format="integer" />
        <attr name="maxDecimal" format="integer" />
    </declare-styleable>

    <declare-styleable name="PercentLayout_Layout">
        <attr name="layout_xPercent" format="float" />
        <attr name="layout_yPercent" format="float" />
    </declare-styleable>

    <declare-styleable name="DateTextView">
        <attr name="dateFormat" format="string" />
    </declare-styleable>

    <declare-styleable name="SuperTextView">
        <attr name="numberFormat" format="string" />
        <attr name="stringFormat" format="string" />
    </declare-styleable>

    <declare-styleable name="DividerView">
        <attr name="android:orientation" />
    </declare-styleable>

    <declare-styleable name="FilterEditText">
        <attr name="filterRegex" format="string" />
    </declare-styleable>

    <attr name="radius" format="dimension" />
    <attr name="radiusTopLeft" format="dimension" />
    <attr name="radiusTopRight" format="dimension" />
    <attr name="radiusBottomLeft" format="dimension" />
    <attr name="radiusBottomRight" format="dimension" />

    <declare-styleable name="RoundImageLayout">
        <attr name="radius" />
    </declare-styleable>

    <declare-styleable name="RoundFrameLayout">
        <attr name="radius" />
        <attr name="radiusTopLeft" />
        <attr name="radiusTopRight" />
        <attr name="radiusBottomLeft" />
        <attr name="radiusBottomRight" />
    </declare-styleable>

    <declare-styleable name="RoundLinearLayout">
        <attr name="radius" />
        <attr name="radiusTopLeft" />
        <attr name="radiusTopRight" />
        <attr name="radiusBottomLeft" />
        <attr name="radiusBottomRight" />
    </declare-styleable>

    <declare-styleable name="RoundRelativeLayout">
        <attr name="radius" />
        <attr name="radiusTopLeft" />
        <attr name="radiusTopRight" />
        <attr name="radiusBottomLeft" />
        <attr name="radiusBottomRight" />
    </declare-styleable>

    <declare-styleable name="SuperRecyclerView">
        <attr name="emptyLayout" format="reference" />
    </declare-styleable>


</resources>